@model Humber_Timesheet_Tracker.Models.TeacherDto

@{
    ViewBag.Title = "DeleteConfirm";
}



<ol class="breadcrumb m-4">
    <li class="breadcrumb-item"><a href="/Teacher/List">Teacher</a></li>
    <li class="breadcrumb-item"><a href="/Teacher/details/@Model.TeacherId">@Model.TeacherFirstName</a></li>
    <li class="breadcrumb-item">@Model.TeacherId</li>
    <li class="breadcrumb-item active">delete</li>
</ol>

<div class="card m-4 shadow">
    <div class="card-header">
        <h2 class="card-title text-dark">Delete Teacher</h2>
        <h6 class="card-subtitle">@Model.TeacherId | @Model.TeacherFirstName</h6>
    </div>
    <div class="card-body">

        <h2>Are you sure you want to delete this teacher?</h2>
        <div class="d-flex">

            <form action="/Teacher/Delete/@Model.TeacherId" method="POST">
                <input name="TEacherId" value="@Model.TeacherId" class="d-none" />
                <input type="submit" class="btn btn-danger border border-2 border-danger" value="Delete" />
            </form>
            <a href="/Teacher/Details/@Model.TeacherId" class="btn btn-outline-primary ms-1">Back</a>
        </div>
    </div>
</div>


