@model IEnumerable<Humber_Timesheet_Tracker.Models.CourseDto>
@{
    ViewBag.Title = "New";
}

<h2>Create Course-Task</h2>
<form action="/CourseTask/Create" method="Post">
    <div>
        <label>Taskname:</label> <input type="text" name="CourseTaskName" />
    </div>
    <div>
        <label>Tasktime:</label> <input type="number" name="CourseTaskTime" />
    </div>
    <div>
        <label>Course:</label>
        <select name="CourseId">
            @foreach (var Courses in Model)
            {
                <option value="@Courses.CourseId">@Courses.CourseName</option>
            }
        </select>
    </div>
    <div>
        <input type="submit" value="Add new task" />
    </div>
</form>

