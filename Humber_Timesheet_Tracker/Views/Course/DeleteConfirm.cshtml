@model Humber_Timesheet_Tracker.Models.CourseDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<ol class="breadcrumb m-4">
    <li class="breadcrumb-item"><a href="/course/list">Course</a></li>
    <li class="breadcrumb-item"><a href="/course/details/@Model.CourseId">@Model.CourseName</a></li>
    <li class="breadcrumb-item active">delete</li>

</ol>
<div class="card m-4 shadow">
    <div class="card-header">
            <h2 class="card-title text-dark">Delete Course</h2>
            <h6 class="card-subtitle">@Model.CourseId | @Model.CourseName</h6>
    </div>
    <div class="card-body">

    <h2>Are you sure you want to delete this Course?</h2>
        <div class="d-flex">

     <form action="/Course/Delete/@Model.CourseId" method="POST">
        <input type="submit" class="btn btn-danger border border-2 border-danger" value="Delete" />
     </form>
     <a href="/Course/Details/@Model.CourseId" class="btn btn-outline-primary ms-1">Cancel</a>
        </div>
    </div>
</div>
